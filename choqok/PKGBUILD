arch=(i686 x86_64)
pkgname=choqok
pkgver=0.5
pkgrel=1
pkgdesc="A Twitter/identi.ca/laconica client for KDE 4."
url="http://choqok.ospdev.net/"
license="GPL"
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
source=("ftp://download.ospdev.net/choqok/choqok/0.5Norooz/choqok-0.5.tar.bz2")
md5sums=('b24b0f163e3b1e6ff725a285fd08b114')

build() {
  cd $srcdir/$pkgname-$pkgver
  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr .
  make || return 1
  make DESTDIR="$pkgdir/" install
}
# vim:syntax=sh
 
