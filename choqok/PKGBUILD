arch=(i686 x86_64)
pkgname=choqok
pkgver=0.6
pkgrel=1
pkgdesc="A Twitter/identi.ca/laconica client for KDE 4."
url="http://choqok.ospdev.net/"
license="GPL"
depends=('kdelibs')
makedepends=('cmake' 'automoc4')
source=("ftp://download.ospdev.net/choqok/choqok/$pkgver/choqok-$pkgver.tar.bz2")
md5sums=('0fb7ffd9425ac9d8c84165c841e04e8d')

build() {
  cd $srcdir/$pkgname-$pkgver
  cmake -DCMAKE_BUILD_TYPE=Release -DCMAKE_INSTALL_PREFIX=/usr .
  make || return 1
  make DESTDIR="$pkgdir/" install
}
# vim:syntax=sh
 
