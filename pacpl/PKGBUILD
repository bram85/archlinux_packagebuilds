# Contributor: Max Nemeth <max.nemeth@gmail.com>
# Maintainer: Bram Schoenmakers <me@bramschoenmakers.nl>
pkgname=pacpl
pkgver=4.0.4
pkgrel=2
pkgdesc="Convert multiple audio types from one format to another. Dolphin/Konqueror Integration."
arch=('i686')
url="http://pacpl.sourceforge.net/"
license=('GPL')
depends=('kdebase' 'perl' 'perl-parse-recdescent' 'perl-inline' 'libogg' 'libvorbis' 'flac' 'perl-ogg-vorbis-header' 'perl-mp3-info' 'perl-mp4-info' 'perl-mp3-tag' 'perl-audio-wma' 'perl-audio-flac-header' 'perl-audio-musepack' 'cddb_get')
install=$pkgname.install
source=(http://downloads.sourceforge.net/pacpl/$pkgname-$pkgver.tar.gz
        pacpl.desktop.patch
        Makefile.in.patch)
md5sums=('743d2b5b71919c87d0ef23d79a5576ce'
         'a6ce5bdd2273ad348ae2de12ef56840a'
         '07d26a2d39c0d886ea0a45243b7c2237')

build() {
	cd $startdir/src/$pkgname-$pkgver
	patch -p0 -i $startdir/Makefile.in.patch || return 1
	patch -p0 -i $startdir/pacpl.desktop.patch || return 1
	./configure --without-amarok --without-d3lphin
	make || return 1
	make DESTDIR=$startdir/pkg install || return 1
	rm -rf $startdir/pkg/usr/share/apps
	install -D -m 644 plugins/dolphin/pacpl.desktop $startdir/pkg/usr/share/kde4/services/ServiceMenus/pacpl.desktop
}
# vim:syntax=sh
