# Contributor: Max Nemeth <max.nemeth@gmail.com>
# Maintainer: Bram Schoenmakers <me@bramschoenmakers.nl>
pkgname=pacpl
pkgver=4.0.5
pkgrel=4
pkgdesc="Convert multiple audio types from one format to another. Dolphin/Konqueror Integration."
arch=('any')
url="http://pacpl.sourceforge.net/"
license=('GPL')
# change the first dependency to kdebase-konqueror if you prefer Konqueror
depends=('kdebase-dolphin' 'perl' 'perl-parse-recdescent' 'perl-inline' 'libogg' 'flac' 'perl-ogg-vorbis-header' 'perl-mp3-info' 'perl-mp4-info' 'perl-mp3-tag' 'perl-audio-wma' 'perl-audio-flac-header' 'perl-audio-musepack' 'cddb_get' 'vorbis-tools')
install=$pkgname.install
source=(http://downloads.sourceforge.net/pacpl/$pkgname-$pkgver.tar.gz)
md5sums=('fb96c0f9e525dd9327c0212bd381fd8d')

build() {
	cd ${srcdir}/$pkgname-$pkgver
	./configure
	make || return 1
	make DESTDIR=${pkgdir} install || return 1
	rm -rf ${pkgdir}/usr/share/apps
}
# vim:syntax=sh
