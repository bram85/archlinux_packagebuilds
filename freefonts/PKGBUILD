# Contributor: Bram Schoenmakers <me@bramschoenmakers.nl>

pkgname=freefonts
pkgver=0.10
pkgrel=1
pkgdesc="A set of free Type1 fonts."
arch=('i686' 'x86_64')
url="http://www.gimp.org/"
license=('custom')
makedepends=('fontconfig' 'xorg-font-utils')
install=font.install
source=(ftp://ftp.gimp.org/pub/gimp/fonts/$pkgname-$pkgver.tar.gz)
md5sums=('a547b5b861d6eb138394bb83748d4eee')

build() {
  cd ${startdir}/src/freefont
  mkdir -p ${startdir}/pkg/usr/share/fonts/freefonts
  mkdir -p ${startdir}/pkg/usr/share/licenses/freefonts

  install -m644 *.pfb ${startdir}/pkg/usr/share/fonts/freefonts/
  install -m644 *.license ${startdir}/pkg/usr/share/licenses/freefonts
}
# vim:syntax=sh
