# Maintainer: Bram Schoenmakers <me@bramschoenmakers.nl>

pkgname=plasma-daisy-plasmoid
pkgver=0.0.4.15
pkgrel=1
pkgdesc="A simple application launcher for Plasma."
arch=('i686' 'x86_64')
url="http://lechio.freehostia.com/daisy.html"
license=('GPL')
depends=('kdebase-workspace')
makedepends=('gcc' 'cmake' 'automoc4')
install=daisy.install
source=("http://lechio.freehostia.com/downloads/plasma-applet-daisy-${pkgver}.tar.gz")
md5sums=('d9e24516974580f87711870f01acd1e6')

build() {
  cd $srcdir/plasma-applet-daisy-${pkgver}
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
# vim:syntax=sh
