# Contributor: Bram Schoenmakers <me@bramschoenmakers.nl>

pkgname=plasma-tictactoe-plasmoid
pkgver=1.0
pkgrel=1
pkgdesc="A Tic Tac Toe game for your plasma desktop."
arch=('i686' 'x86_64')
url="http://sourceforge.net/projects/tatetiplasmoid/"
license=('GPL')
depends=('kdebase-workspace')
makedepends=('gcc' 'cmake' 'automoc4')
source=("http://www.kde-look.org/CONTENT/content-files/99329-tictactoe-$pkgver.tar.bz2")
md5sums=('bf571c72ecc85983bbd5642009568c9b')

build() {
  cd $srcdir/tictactoe-$pkgver
  mkdir build && cd build
  cmake -DCMAKE_INSTALL_PREFIX=/usr .. || return 1
  make || return 1
  make DESTDIR="$pkgdir/" install || return 1
}
