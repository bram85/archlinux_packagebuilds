# Maintainer: Bram Schoenmakers <me@bramschoenmakers.nl>

pkgname=vim-pyflakes
pkgver=1.4
_scriptid=10551
pkgrel=1
pkgdesc='Vim plugin which highlights common Python errors like misspelling a variable name on the fly.'
arch=('i686' 'x86_64')
url='http://www.vim.org/scripts/script.php?script_id=2441'
depends=('vim' 'python>=2.5')
source=("http://www.vim.org/scripts/download_script.php?src_id=$_scriptid")
license=('unknown')
md5sums=('845435a7ae51275dd691c98460bdeeca')

build() {
  cd $srcdir

  install -D -m644 $srcdir/pyflakes.vim $pkgdir/usr/share/vim/after/ftplugin/python/pyflakes.vim
  cp -r pyflakes $pkgdir/usr/share/vim/after/ftplugin/python/pyflakes
}
# vim:syntax=sh

